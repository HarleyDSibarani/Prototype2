<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="5dp"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/kotakinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/kotak_teks">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp">

                <TextView
                    android:id="@+id/item_nama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama     : "
                    android:textSize="8pt"
                    android:textColor="@color/utama"/>

                <TextView
                    android:id="@+id/item_namabantuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="asep"
                    android:textSize="8pt"
                    android:textColor="@color/utama"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp"
                >

                <TextView
                    android:id="@+id/item_bantuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bantuan : "
                    android:textSize="8pt"
                    android:textColor="@color/utama"/>

                <TextView
                    android:id="@+id/item_jawabanbantuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8pt"
                    android:text="Tolong"
                    android:textColor="@color/utama"/>

                <TextView
                    android:id="@+id/item_no_telepon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8pt"
                    android:text="Tolong"
                    android:textColor="@color/utama"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/item_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8pt"
                    android:text="Tolong"
                    android:textColor="@color/utama"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/item_alamatdetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8pt"
                    android:text="Tolong"
                    android:textColor="@color/utama"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/item_kondisidetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8pt"
                    android:text="Tolong"
                    android:textColor="@color/utama"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/item_longitude"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8pt"
                    android:text="Tolong"
                    android:textColor="@color/utama"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/item_latitude"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8pt"
                    android:text="Tolong"
                    android:textColor="@color/utama"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/item_idhelp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8pt"
                    android:text="Tolong"
                    android:textColor="@color/utama"
                    android:visibility="gone"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp"
                >

                <TextView
                    android:id="@+id/jarak1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jarak : "
                    android:textSize="8pt"
                    android:textColor="@color/utama"/>

                <TextView
                    android:id="@+id/item_jawabanjaraklat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8pt"
                    android:text="Jarak"
                    android:textColor="@color/utama"/>


            </LinearLayout>
        </LinearLayout>




    </androidx.cardview.widget.CardView>

</LinearLayout>