<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".verifikasi_page"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Data anda telah disimpan \nSilahkan Periksa Email Untuk Melakukan Verifikasi"
        android:textColor="@color/utama"
        android:background="@drawable/kotak_teks"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/loginverifikasibutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_button"
        android:text="Masuk"
        android:textAllCaps="false"
        android:textColor="@color/utama"
        android:textSize="17dp"
        app:backgroundTint="@null">

    </Button>
</LinearLayout>