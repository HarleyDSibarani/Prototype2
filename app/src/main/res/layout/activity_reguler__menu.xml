<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Reguler_Menu"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Butuh Bantuan ?"
        android:textColor="@color/utama"
        android:layout_gravity="center"
        android:paddingTop="10dp"
        android:textSize="10pt"
        />

    <TextView
        android:id="@+id/namauser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama"
        android:textColor="@color/utama"
        android:layout_gravity="center"
        android:paddingTop="10dp"
        android:textSize="8pt"
        android:editable="false"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/soshelp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:src="@drawable/help_logo"
            android:layout_gravity="center">
        </ImageView>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/formfinduser"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_margin="5dp"
            app:cardCornerRadius="5dp"
            android:clickable="true"
            android:layout_gravity="center"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_multiple_users_silhouette"
                    android:background="@drawable/kotak_teks"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cari Bantuan"
                    android:textColor="@color/utama"
                    android:layout_marginTop="5dp"
                    android:textSize="17dp"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/formfinduserhelp"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_margin="5dp"
            app:cardCornerRadius="5dp"
            android:clickable="true"
            android:layout_gravity="center"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_handshake2"
                    android:background="@drawable/kotak_teks"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Beri Bantuan"
                    android:textColor="@color/utama"
                    android:layout_marginTop="5dp"
                    android:textSize="17dp"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/formfindworkshop"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_margin="5dp"
            app:cardCornerRadius="5dp"
            android:clickable="true"
            android:layout_gravity="center"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_settings"
                    android:background="@drawable/kotak_teks"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cari Bengkel"
                    android:textColor="@color/utama"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:textSize="17dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/DaftarBengkel"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_margin="5dp"
            app:cardCornerRadius="5dp"
            android:clickable="true"
            android:layout_gravity="center"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_help_list"
                    android:background="@drawable/kotak_teks"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bengkel Terdekat"
                    android:gravity="center"
                    android:textColor="@color/utama"
                    android:layout_marginTop="5dp"
                    android:textSize="17dp"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

